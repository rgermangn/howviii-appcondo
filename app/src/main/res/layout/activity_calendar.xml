<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5"
    tools:context=".reservation.CalendarActivity">

    <TextView
        android:id="@+id/area_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CalendÃ¡rio de Reservas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal"/>

    <CalendarView
        android:id="@+id/reservation_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datas Reservadas Encontradas (Para fins de teste):"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/reserved_dates_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:minHeight="50dp"
        android:gravity="top|start"
        tools:text="01/12/2025\n02/12/2025\n03/12/2025" />

</LinearLayout>