<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="top"
    tools:context=".reservation.ReservationActivity">

    <!-- Título da Área -->
    <TextView
        android:id="@+id/area_title_text_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        tools:text="Salão de Festas" />

    <!-- Data Selecionada -->
    <TextView
        android:id="@+id/selected_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        tools:text="Data Selecionada: 05/12/2025" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status de Disponibilidade"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <!-- CAL-T4 NOVO CAMPO: Campo principal para mostrar o status (Disponível ou Reservado) -->
    <TextView
        android:id="@+id/availability_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        tools:text="DISPONÍVEL" />

    <!-- NOVO CAMPO: Nome do Residente (Visível apenas se RESERVADO) -->
    <TextView
        android:id="@+id/resident_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservado por:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/resident_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:text="Maria Souza"
        tools:visibility="visible"/>

    <!-- NOVO CAMPO: Unidade do Residente (Visível apenas se RESERVADO) -->
    <TextView
        android:id="@+id/resident_unit_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unidade:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/resident_unit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        tools:text="Apt 205"
        tools:visibility="visible"/>

</LinearLayout>
